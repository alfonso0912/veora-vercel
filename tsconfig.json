{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    // üî• IMPORTANTISSIMO: Vercel accetta solo se sono entrambi true
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // ‚ùóÔ∏è DISATTIVIAMO TUTTA LA STRICT MODE
    "strict": false,

    // ‚ùóÔ∏è Non facciamo controlli JS/TS durante la build
    "noEmit": true,
    "checkJs": false,

    "esModuleInterop": true,
    "module": "esnext",

    // üî• BUNDLER SU VERCEL √à BUGGATO ‚Üí METTI NODE
    "moduleResolution": "node",

    "resolveJsonModule": true,

    // ‚ùóÔ∏è QUESTA √à QUELLA CHE ROMPEVA TUTTO
    "isolatedModules": false,

    "jsx": "preserve",
    "incremental": false,

    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  // üî• RIMUOVO IL FOTTUTO .next/types CHE TI BUCAVA TUTTO
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/**/*"],

  "exclude": ["node_modules", ".next"]
}
